<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<!-- Including other xacro file/s -->
<xacro:include filename="robot_include.xacro"/>

<link name="world"/>

<joint name="base_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="world"/>
    <child link="base_link"/>
</joint>
<link name="base_link">
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <box size=".07 0.07 0.015"/>
        </geometry>
        <material name="grey">
            <color rgba="0.1 0.1 0.1 1"/>
        </material>
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <box size=".07 0.07 0.015"/>
        </geometry>
    </collision>
    <!-- <inertial>
        <origin xyz="0.035 0.035 0.0075" rpy="0 0 0"/>
        <mass value=".5"/>
        <inertia ixx="2.6" ixy="0.0" ixz="0.0"
            iyy="6.26" izz="5.5"
            iyz="0.0"/>
    </inertial> -->
    <!-- or -->
    <xacro:inertial_box mass="0.5" x="0.07" y="0.07" z="0.015">
        <origin xyz="0.035 0.035 0.0075" rpy="0 0 0"/>
    </xacro:inertial_box>
</link>

<joint name="revolute_joint" type="revolute">
    <origin xyz="0.035 0.035 0.015" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="link_1"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="1.57142" velocity="0.1" effort="100"/>
</joint>

<link name="link_1">
    <visual>
        <origin xyz="0.035 0.035 0.015" rpy="0 0 0"/>
        <geometry>
            <cylinder size="0.03 0.1"/>
        </geometry>
        <material name="grey">
            <color rgba="0.1 0.1 0.1 1"/>
        </material>
    </visual>
    <collision>
        <origin xyz="0.035 0.035 0.015" rpy="0 0 0"/>
        <geometry>
            <cylinder size="0.03 0.1"/>
        </geometry>
        <material name="grey">
            <color rgba="0.1 0.1 0.1 1"/>
        </material>
    </collision>
    <!-- <inertial>
        <origin xyz="0.0015 0.0015 0.05" rpy="0 0 0"/>
        <mass value=".5"/>
        <inertia ixx="2.6" ixy="0.0" ixz="0.0"
            iyy="6.26" izz="5.5"
            iyz="0.0"/>
    </inertial> -->

    <!-- or -->

    <xacro:inertial_cylinder mass="0.5" radius="0.03" length="0.01">
        <origin xyz="0.0015 0.0015 0.05" rpy="0 0 0"/>
    </xacro:inertial_cylinder>

    <!-- variables -->

    <xacro:property name="link1_length" value="0.1"/>
    <xacro:property name="link1_radius" value="0.03"/>

    <!-- Can be used as ${link1_length} -->
</link>

</robot> 